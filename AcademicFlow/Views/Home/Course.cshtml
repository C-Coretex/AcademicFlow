@{
    var courseId = ViewData["CourseId"];
    var assignments = ViewData["Assignments"] as List<AcademicFlow.Domain.Contracts.Entities.Assignment>;

    string TruncateDescription(string description, int maxLength)
    {
        if (string.IsNullOrEmpty(description))
        {
            return string.Empty;
        }

        if (description.Length <= maxLength)
        {
            return description;
        }

        return description.Substring(0, maxLength) + "...";
    }
}

<div class="container-fluid">
    <div class="row">
        <partial name="../Course/Partials/_CourseNav" />
        <div class="col-sm p-0 min-vh-100">
            <div class="container">
                <div id="course-list-item" class="mb-5" courseId="@courseId"></div>

                <div id="course-assignments" class="my-3">
                    <p class="display-6">Assignments (!!!TODO)</p>

                    <table class="table">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Title</th>
                                <th scope="col">Description</th>
                                <th scope="col">Grade</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var assignment in assignments)
                            {
                                <tr>
                                    <th scope="row">@assignment.Id</th>
                                    <td><a href="/Home/Assignment/@assignment.Id" class="text-success">@assignment.Title</a></td>
                                    <td class="text-muted">@TruncateDescription(assignment.Description, 70)</td>

                                    @if (@assignment.Grade != null) {
                                        <td>@assignment.Grade/@assignment.TotalGrade</td>
                                    }
                                    else
                                    {
                                        <td>-</td>
                                    }
                                    
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="module" src="~/js/dist/pages/course/course.js" asp-append-version="true"></script>