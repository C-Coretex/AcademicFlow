@{
    ViewData["Title"] = "Admin Center";
}
<div class="main d-flex">
    <div class="row">
        @*TODO: add as Razor page element *@
        <div class="d-flex flex-column flex-shrink-0 p-3 bg-light min-vh-100" style="width: 280px;">
            <a class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
                <i class="fa-solid fa-graduation-cap me-2"></i>
                <span class="fs-4"> @ViewData["Title"]</span>
            </a>
            <hr>
            <ul class="nav navigation-pane nav-pills flex-column mb-auto">
                <li class="nav-item" data-nav-el="allUsers">
                    <a class="nav-link active">
                        <i class="fa-solid fa-users me-2"></i>
                        All Users
                    </a>
                </li>
                <li class="nav-item" data-nav-el="addUser">
                    <a class="nav-link link-dark">
                        <i class="fa-solid fa-user-plus me-2"></i>
                        User manager
                    </a>
                </li>
                <li class="nav-item" data-nav-el="allCourses">
                    <a class="nav-link link-dark">
                        <i class="fa-solid fa-notes-medical me-2"></i>
                        All Courses
                    </a>
                </li>
                <li class="nav-item" data-nav-el="addCourse">
                    <a class="nav-link link-dark">
                        <i class="fa-solid fa-notes-medical me-2"></i>
                        Course manager
                    </a>
                </li>
                <li class="nav-item" data-nav-el="allPrograms">
                    <a class="nav-link link-dark">
                        <i class="fa-solid fa-notes-medical me-2"></i>
                        All Programs
                    </a>
                </li>
                <li class="nav-item" data-nav-el="addProgram">
                    <a class="nav-link link-dark">
                        <i class="fa-solid fa-notes-medical me-2"></i>
                        Program manager
                    </a>
                </li>
            </ul>
            <hr>
            <div class="dropdown">
                <a class="d-flex align-items-center link-dark text-decoration-none dropdown-toggle cursor-pointer" id="dropdownUser2" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fa-solid fa-circle-user me-2"></i>
                    <div class="js-user-name"></div>
                </a>
                <ul class="dropdown-menu text-small shadow" aria-labelledby="dropdownUser2">
                    <li><a class="dropdown-item" href="#">Profile</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><button class="dropdown-item js-logout-user"><i class="fa-solid fa-arrow-right-from-bracket"></i><span> Sign out</span></button></li>
                </ul>
            </div>
        </div>

        <div class="add-user-container col d-none">
            <h1 class="authentication-page__heading">Add new user</h1>
            <h5 class="authentication-page__message"></h5>
            <form id="registerForm" class="">
                <partial name="Partials/_UserForm"></partial>
                <button type="button" class="btn btn-primary btn-lg w-100 js-add-user"><i class="fa-solid fa-plus"></i><span> Add User</span></button>
                <div class="error-message"></div>
            </form>

            <form id="deleteUserForm" class="">
                <div class="mb-3">
                    <label for="userId" class="form__input form-control">User ID</label>
                    <input type="text" class="form-control" id="userId" name="userId" placeholder="Enter User ID">
                </div>
                <button type="submit" class="btn btn-danger js-delete-user">Delete User</button>
            </form>

            <form id="changeRolesForm" class="">
                <div class="mb-3">
                    <label for="userId" class="form-label">User ID</label>
                    <input type="text" class="form-control" id="userId" name="userId" placeholder="Enter User ID">
                </div>
                <div class="mb-3">
                    <label class="form-label">Select Roles</label>
                    <div>
                        <input type="checkbox" id="Admin" name="roles" value="admin">
                        <label for="admin">admin</label>
                    </div>
                    <div>
                        <input type="checkbox" id="Student" name="roles" value="student">
                        <label for="student">student</label>
                    </div>
                    <div>
                        <input type="checkbox" id="Professor" name="roles" value="professor">
                        <label for="professor">Professor</label>
                    </div>
                    <!-- Add more checkboxes for each role -->
                </div>
                <button type="submit" class="btn btn-primary js-change-role">Change Roles</button>
            </form>

            <form id="editUserForm" class="my-2">
                <div class="form__input-container mb-2">
                    <label for="id">User Id</label>
                    <input type="number" id="id" name="id" class="form__input form-control" placeholder="Enter user id">
                </div>
                <partial name="Partials/_UserForm"></partial>
                <button type="button" class="btn btn-primary w-100 js-edit-user">Edit User</button>
                <div class="error-message"></div>
            </form>

            <form id="resetPasswordForm" class="">
                <div class="mb-3">
                    <label for="userId" class="form-label">User ID</label>
                    <input type="text" class="form-control" id="userId" name="userId" placeholder="Enter User ID">
                </div>
                <button type="submit" class="btn btn-primary js-reset-pass">Reset password!</button>
            </form>
        </div>
        
        <div class="user-table col">
            <h2>User Data</h2>
            <table class="table table-striped" id="usersTable">
            </table>
        </div>

        <div class="col all-courses-tab d-none">
            <h2>All Courses</h2>
            <table class="table table-striped" id="coursesTable">
            </table>
        </div>

        <div class="col all-programs-tab d-none">
            <h2>All Programs</h2>
            <table class="table table-striped" id="programsTable">
            </table>
        </div>

        <div class="course-manager col d-none">
            <h1 class="authentication-page__heading">Course manager</h1>
            <h5 class="authentication-page__message"></h5>
            <form id="createCourse" class="my-2">
                <partial name="Partials/_CourseForm" />
                <button type="button" class="btn btn-primary w-100 js-add-course">Add Course</button>
                <div class="error-message"></div>
            </form>
            <hr />
            <form id="editCourse" class="my-2">
                <div class="form__input-container mb-2">
                    <label for="id">Course Id</label>
                    <input type="number" id="id" name="id" class="form__input form-control" placeholder="Enter course id">
                </div>
                <partial name="Partials/_CourseForm" />
                <button type="button" class="btn btn-primary w-100 js-edit-course">Edit Course</button>
                <div class="error-message"></div>
            </form>
        </div>

        <div class="program-manager col d-none">
            <h1 class="authentication-page__heading">Program manager</h1>
            <h5 class="authentication-page__message"></h5>
            <form id="createProgram" class="my-2">
                <partial name="Partials/_ProgramForm" />
                <button type="button" class="btn btn-primary w-100 js-add-program">Add Program</button>
                <div class="error-message"></div>
            </form>
            <hr />
            <form id="editProgram" class="my-2">
                <div class="form__input-container mb-2">
                    <label for="id">Program Id</label>
                    <input type="number" id="id" name="id" class="form__input form-control" placeholder="Enter program id">
                </div>
                <partial name="Partials/_ProgramForm" />
                <button type="button" class="btn btn-primary w-100 js-edit-program">Edit Program</button>
                <div class="error-message"></div>
            </form>
        </div>
    </div>


</div>

<script type="module" src="~/js/dist/site.js" asp-append-version="true"></script>
<script type="module" src="~/js/dist/pages/admin/admin.js" asp-append-version="true"></script>

